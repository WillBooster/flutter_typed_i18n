# Editor configuration, see http://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{dart,java,js,jsx,ts,tsx,c,cpp,h,m,json,yaml}]
indent_size = 2
indent_style = space

[*.{gradle}]
indent_size = 4
indent_style = space

[*.md]
max_line_length = off
trim_trailing_whitespace = false
